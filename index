<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>What's Your Next Dream Destination?</title>
  <style>
    :root{--accent:#ff7b00;--bg:#fffaf5;--card:#fff;--muted:#6b7280}
    body{font-family:Inter,ui-sans-serif,system-ui; margin:0; background:var(--bg); color:#1e293b;}
    .wrap{max-width:800px;margin:24px auto;padding:18px}
    .card{background:var(--card);border-radius:16px;box-shadow:0 6px 20px rgba(0,0,0,0.05);overflow:hidden;padding:22px}
    header{text-align:center;margin-bottom:20px}
    header h1{margin:0;font-size:24px;color:#1e293b}
    header p{margin-top:8px;color:var(--muted)}

    .question{font-weight:600;margin:16px 0 8px;font-size:18px}
    .choices{display:grid;grid-template-columns:1fr 1fr;gap:10px}
    .choice{border:1px solid #f1f1f1;border-radius:10px;padding:12px;background:#fff;cursor:pointer;transition:0.2s}
    .choice:hover{background:#fff4e6}
    .choice.selected{border-color:var(--accent);background:#fff4e6;box-shadow:0 4px 10px rgba(255,123,0,0.15)}

    .btn{background:var(--accent);color:#fff;padding:10px 16px;border:none;border-radius:10px;cursor:pointer;font-weight:600;margin-top:14px}
    .btn:disabled{opacity:0.5;cursor:not-allowed}

    .result{display:none;text-align:center;margin-top:24px}
    .result img{max-width:100%;border-radius:12px;margin-bottom:12px}
    .result h2{margin:8px 0}
  </style>
</head>
<body>
  <div class="wrap">
    <div class="card">
      <header>
        <h1>Not Sure Where to Go Next?</h1>
        <p>Let your taste, mood, or spirit animal decide your next dreamy destination üåç</p>
      </header>

      <div id="quiz">
        <div class="question" id="qText">Loading question...</div>
        <div class="choices" id="choices"></div>
        <button class="btn" id="nextBtn">Next ‚ñ∂</button>
      </div>

      <div class="result" id="result">
        <img id="resImg" alt="destination" />
        <h2 id="resTitle"></h2>
        <p id="resDesc"></p>
        <button class="btn" onclick="restart()">Try Again</button>
      </div>
    </div>
  </div>

  <script>
    const QUESTIONS = [
      {
        q: "What's your favorite kind of weather?",
        choices: [
          { text: "Sunny and warm", value: "beach" },
          { text: "Cool and misty", value: "mountain" },
          { text: "Romantic rain", value: "city" },
          { text: "Dry desert vibes", value: "desert" }
        ]
      },
      {
        q: "Pick your ideal weekend activity:",
        choices: [
          { text: "Sipping cocktails by the ocean", value: "beach" },
          { text: "Hiking scenic trails", value: "mountain" },
          { text: "Exploring museums and cafes", value: "city" },
          { text: "Stargazing under the night sky", value: "desert" }
        ]
      },
      {
        q: "Which spirit animal speaks to you?",
        choices: [
          { text: "Dolphin", value: "beach" },
          { text: "Eagle", value: "mountain" },
          { text: "Cat", value: "city" },
          { text: "Camel", value: "desert" }
        ]
      },
      {
        q: "Choose your travel snack:",
        choices: [
          { text: "Fresh tropical fruits", value: "beach" },
          { text: "Trail mix and coffee", value: "mountain" },
          { text: "Croissants and espresso", value: "city" },
          { text: "Dates and mint tea", value: "desert" }
        ]
      }
    ];

    const RESULTS = {
      beach: {
        title: "Bali, Indonesia üå¥",
        img: "https://source.unsplash.com/800x500/?bali,beach",
        desc: "You crave sun, sand, and serenity ‚Äî Bali‚Äôs beaches and tropical vibes are calling your name!"
      },
      mountain: {
        title: "Swiss Alps, Switzerland üèîÔ∏è",
        img: "https://source.unsplash.com/800x500/?swiss,alps,mountain",
        desc: "You love peace and breathtaking views ‚Äî the Swiss Alps offer the calm and adventure you seek."
      },
      city: {
        title: "Paris, France üóº",
        img: "https://source.unsplash.com/800x500/?paris,eiffel,cafe",
        desc: "You thrive in energy and romance ‚Äî from art to pastries, Paris is your perfect getaway."
      },
      desert: {
        title: "Marrakech, Morocco üê´",
        img: "https://source.unsplash.com/800x500/?marrakech,desert,market",
        desc: "You‚Äôre a dreamer drawn to mystery ‚Äî Marrakech‚Äôs colors, spice markets, and sands await."
      }
    };

    let index = 0;
    const answers = [];
    const qText = document.getElementById('qText');
    const choicesEl = document.getElementById('choices');
    const nextBtn = document.getElementById('nextBtn');
    const resultEl = document.getElementById('result');
    const resImg = document.getElementById('resImg');
    const resTitle = document.getElementById('resTitle');
    const resDesc = document.getElementById('resDesc');

    function render() {
      const q = QUESTIONS[index];
      qText.textContent = q.q;
      choicesEl.innerHTML = '';
      q.choices.forEach(c => {
        const div = document.createElement('div');
        div.className = 'choice';
        div.textContent = c.text;
        div.onclick = () => select(c.value, div);
        choicesEl.appendChild(div);
      });
      nextBtn.disabled = true;
    }

    let currentValue = null;
    function select(value, element) {
      currentValue = value;
      Array.from(choicesEl.children).forEach(c => c.classList.remove('selected'));
      element.classList.add('selected');
      nextBtn.disabled = false;
    }

    nextBtn.onclick = () => {
      if (!currentValue) return;
      answers.push(currentValue);
      currentValue = null;
      index++;
      if (index >= QUESTIONS.length) return showResult();
      render();
    };

    function showResult() {
      const freq = answers.reduce((a,v)=>(a[v]=(a[v]||0)+1,a),{});
      const top = Object.entries(freq).sort((a,b)=>b[1]-a[1])[0][0];
      const res = RESULTS[top];
      document.getElementById('quiz').style.display = 'none';
      resultEl.style.display = 'block';
      resImg.src = res.img;
      resTitle.textContent = res.title;
      resDesc.textContent = res.desc;
    }

    function restart() {
      index = 0; answers.length = 0;
      resultEl.style.display = 'none';
      document.getElementById('quiz').style.display = 'block';
      render();
    }

    render();
  </script>
</body>
</html>
